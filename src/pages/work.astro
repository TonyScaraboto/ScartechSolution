---
import { getCollection } from 'astro:content';
import ContactCTA from '../components/ContactCTA.astro';
import Grid from '../components/Grid.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import BaseLayout from '../layouts/BaseLayout.astro';

const projects = (await getCollection('work')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
	title="Portfólio | Scartech Solution"
	description="Conheça nossos projetos de automação e transformação digital"
>
	<div class="portfolio-container">
		<!-- Hero -->
		<section class="hero-portfolio">
			<h1 class="hero-title">Nosso <span class="highlight">Portfólio</span></h1>
			<p class="hero-subtitle">Projetos reais que transformaram negócios através da tecnologia</p>
		</section>

		<!-- Estatísticas de Impacto -->
		<section class="impact-stats">
			<div class="stat-card">
				<img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?auto=format&fit=crop&w=800&q=80" alt="Performance" class="stat-img" />
				<div class="stat-number">90%</div>
				<div class="stat-label">Redução de tempo em processos</div>
			</div>
			<div class="stat-card">
				<img src="https://images.unsplash.com/photo-1554224155-8d04cb21cd6c?auto=format&fit=crop&w=800&q=80" alt="Custos" class="stat-img" />
				<div class="stat-number">40%</div>
				<div class="stat-label">Redução de custos operacionais</div>
			</div>
			<div class="stat-card">
				<img src="https://images.unsplash.com/photo-1556761175-5973dc0f32e7?auto=format&fit=crop&w=800&q=80" alt="Satisfação" class="stat-img" />
				<div class="stat-number">100%</div>
				<div class="stat-label">Satisfação dos clientes</div>
			</div>
			<div class="stat-card">
				<img src="https://images.unsplash.com/photo-1551434678-e076c223a692?auto=format&fit=crop&w=800&q=80" alt="Suporte" class="stat-img" />
				<div class="stat-number">24/7</div>
				<div class="stat-label">Suporte contínuo</div>
			</div>
		</section>

		<!-- Áreas de Atuação -->
		<section class="areas-section">
			<h2 class="section-title">Áreas de Atuação</h2>
			<div class="areas-grid">
				<div class="area-card">
					<img src="https://images.unsplash.com/photo-1485827404703-89b55fcc595e?auto=format&fit=crop&w=1200&q=80" alt="RPA" class="area-img" />
					<h3>Automação RPA</h3>
					<p>Robôs que executam tarefas repetitivas com 100% de precisão</p>
				</div>
				<div class="area-card">
					<img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?auto=format&fit=crop&w=1200&q=80" alt="E-commerce" class="area-img" />
					<h3>E-commerce</h3>
					<p>Lojas virtuais e integrações com marketplaces</p>
				</div>
				<div class="area-card">
					<img src="https://images.unsplash.com/photo-1531746790731-6c087fecd65a?auto=format&fit=crop&w=1200&q=80" alt="Chatbots" class="area-img" />
					<h3>Chatbots IA</h3>
					<p>Atendimento automatizado inteligente 24/7</p>
				</div>
				<div class="area-card">
					<img src="https://images.unsplash.com/photo-1551288049-bebda4e38f71?auto=format&fit=crop&w=1200&q=80" alt="BI" class="area-img" />
					<h3>Business Intelligence</h3>
					<p>Dashboards e análises de dados em tempo real</p>
				</div>
				<div class="area-card">
					<img src="https://images.unsplash.com/photo-1558494949-ef010cbdcc31?auto=format&fit=crop&w=1200&q=80" alt="Integração" class="area-img" />
					<h3>Integração de Sistemas</h3>
					<p>Conectamos todas as suas ferramentas</p>
				</div>
				<div class="area-card">
					<img src="https://images.unsplash.com/photo-1498050108023-c5249f4df085?auto=format&fit=crop&w=1200&q=80" alt="Web" class="area-img" />
					<h3>Desenvolvimento Web</h3>
					<p>Sites e sistemas modernos e eficientes</p>
				</div>
			</div>
		</section>

		<ContactCTA />
	</div>
</BaseLayout>

<style>
.portfolio-container {
	background: linear-gradient(135deg, #000000 0%, #0a0a0a 30%, #050505 60%, #000000 100%);
	background-size: 400% 400%;
	animation: gradientShift 15s ease infinite;
	min-height: 100vh;
	position: relative;
	z-index: 2;
	padding-top: 7rem;
	overflow: hidden;
}

.portfolio-container::before {
	content: '';
	position: absolute;
	top: -50%;
	left: -50%;
	width: 200%;
	height: 200%;
	background: radial-gradient(circle, rgba(255, 255, 255, 0.02) 0%, rgba(255, 255, 255, 0.01) 50%, transparent 70%);
	animation: float 20s ease-in-out infinite;
	pointer-events: none;
	filter: blur(40px);
	z-index: -1;
}

.portfolio-container::after {
	content: '';
	position: absolute;
	bottom: -50%;
	right: -50%;
	width: 200%;
	height: 200%;
	background: radial-gradient(circle, rgba(255, 255, 255, 0.015) 0%, rgba(255, 255, 255, 0.008) 50%, transparent 70%);
	animation: float 25s ease-in-out infinite reverse;
	pointer-events: none;
	filter: blur(40px);
	z-index: -1;
}

@keyframes gradientShift {
	0% { background-position: 0% 50%; }
	50% { background-position: 100% 50%; }
	100% { background-position: 0% 50%; }
}

@keyframes float {
	0%, 100% { transform: translate(0, 0) rotate(0deg); }
	33% { transform: translate(30px, -30px) rotate(5deg); }
	66% { transform: translate(-20px, 20px) rotate(-5deg); }
}

.hero-portfolio {
	max-width: 1400px;
	margin: 0 auto 4rem;
	padding: 0 2rem;
	text-align: center;
}

.hero-title {
	font-size: 4rem;
	font-weight: 900;
	color: #fff;
	margin-bottom: 1.5rem;
}

.highlight {
	background: linear-gradient(135deg, #3b82f6, #2563eb);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	background-clip: text;
}

.hero-subtitle {
	font-size: 1.4rem;
	color: #94a3b8;
}

.section-title {
	font-size: 2.5rem;
	font-weight: 900;
	color: #fff;
	margin-bottom: 3rem;
	text-align: center;
}

/* Stats */
.impact-stats {
	max-width: 1400px;
	margin: 0 auto 4rem;
	padding: 0 2rem;
	display: grid;
	grid-template-columns: repeat(4, 1fr);
	gap: 2rem;
}

.stat-card {
	background: rgba(30, 41, 59, 0.5);
	backdrop-filter: blur(10px);
	padding: 2rem;
	border-radius: 1rem;
	border: 1px solid rgba(59, 130, 246, 0.2);
	text-align: center;
	transition: transform 0.3s ease;
	overflow: hidden;
	position: relative;
}

.stat-card:hover {
	transform: translateY(-10px);
}

.stat-img {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	object-fit: cover;
	opacity: 0.1;
	z-index: -1;
}

.stat-number {
	font-size: 3.5rem;
	font-weight: 900;
	background: linear-gradient(135deg, #3b82f6, #2563eb);
	-webkit-background-clip: text;
	-webkit-text-fill-color: transparent;
	background-clip: text;
	margin-bottom: 0.5rem;
}

.stat-label {
	color: #cbd5e1;
	font-size: 1rem;
}

/* Projects */
.projects-section {
	max-width: 1400px;
	margin: 4rem auto;
	padding: 0 2rem;
}

/* Areas */
.areas-section {
	max-width: 1400px;
	margin: 4rem auto;
	padding: 0 2rem;
}

.areas-grid {
	display: grid;
	grid-template-columns: repeat(3, 1fr);
	gap: 2rem;
}

.area-card {
	background: rgba(30, 41, 59, 0.5);
	backdrop-filter: blur(10px);
	border-radius: 1rem;
	overflow: hidden;
	border: 1px solid rgba(59, 130, 246, 0.2);
	transition: transform 0.3s ease;
}

.area-card:hover {
	transform: translateY(-10px);
}

.area-img {
	width: 100%;
	height: 200px;
	object-fit: cover;
}

.area-card h3 {
	color: #fff;
	font-size: 1.5rem;
	padding: 1rem 1.5rem 0.5rem;
}

.area-card p {
	color: #cbd5e1;
	padding: 0 1.5rem 1.5rem;
}

@media (max-width: 1024px) {
	.impact-stats {
		grid-template-columns: repeat(2, 1fr);
	}

	.areas-grid {
		grid-template-columns: repeat(2, 1fr);
	}
}

@media (max-width: 768px) {
	.portfolio-container {
		padding-top: 12rem;
	}

	.hero-title {
		font-size: 2.5rem;
	}

	.impact-stats,
	.areas-grid {
		grid-template-columns: 1fr;
	}
}
</style>

