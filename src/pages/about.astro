<style>
.about-container {
  position: relative;
  z-index: 2;
  padding-top: 5rem;
}

/* Hero Section */
.hero-about {
  max-width: 1400px;
  margin: 0 auto 4rem;
  padding: 0 2rem;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.hero-content {
  animation: fadeInUp 0.8s ease-out;
}

.hero-title {
  font-size: 3.5rem;
  font-weight: 900;
  color: #fff;
  margin-bottom: 1.5rem;
  line-height: 1.1;
}

.highlight {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-subtitle {
  font-size: 1.3rem;
  color: #94a3b8;
  line-height: 1.6;
}

.hero-image {
  width: 100%;
  height: 500px;
  object-fit: cover;
  border-radius: 1rem;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
  animation: fadeIn 1s ease-out 0.3s backwards;
}

/* Content Section */
.content-section {
  max-width: 1400px;
  margin: 0 auto 4rem;
  padding: 0 2rem;
}

.section-title {
  font-size: 2.5rem;
  font-weight: 900;
  color: #fff;
  margin-bottom: 2rem;
  text-align: center;
}

.section-subtitle {
  font-size: 1.2rem;
  color: #94a3b8;
  text-align: center;
  margin-bottom: 3rem;
}

.content-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.text-content p {
  font-size: 1.1rem;
  line-height: 1.8;
  color: #cbd5e1;
  margin-bottom: 1.5rem;
}

.text-content strong {
  color: #3b82f6;
}

.content-image {
  width: 100%;
  height: 400px;
  object-fit: cover;
  border-radius: 1rem;
  box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
}

/* MVV Section */
.mvv-section {
  max-width: 1400px;
  margin: 4rem auto;
  padding: 0 2rem;
}

.mvv-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 2rem;
  margin-top: 3rem;
}

.mvv-card {
  background: rgba(30, 41, 59, 0.5);
  backdrop-filter: blur(10px);
  padding: 2.5rem;
  border-radius: 1rem;
  border: 1px solid rgba(59, 130, 246, 0.2);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.mvv-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 60px rgba(37, 99, 235, 0.3);
}

.mvv-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.mvv-card h3 {
  font-size: 1.8rem;
  color: #fff;
  margin-bottom: 1rem;
}

.mvv-card p {
  color: #cbd5e1;
  line-height: 1.7;
}

.mvv-card ul {
  list-style: none;
  padding: 0;
  color: #cbd5e1;
}

.mvv-card ul li {
