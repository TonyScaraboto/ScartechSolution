  color: #fff;
  margin-bottom: 0.8rem;
}

.diferencial-card p {
  color: #cbd5e1;
  line-height: 1.6;
}

/* Animations */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* Responsive */
@media (max-width: 1024px) {
  .hero-about,
  .content-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .metodologia-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .mvv-grid,
  .diferenciais-grid {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 768px) {
  .hero-title {
    font-size: 2.5rem;
  }

  .section-title {
    font-size: 2rem;
  }

  .metodologia-grid {
    grid-template-columns: 1fr;
  }
}
</style>
