<script>
document.getElementById('contactForm')?.addEventListener('submit', function(e) {
  e.preventDefault();
  
  const name = (document.getElementById('name') as HTMLInputElement).value;
  const email = (document.getElementById('email') as HTMLInputElement).value;
  const phone = (document.getElementById('phone') as HTMLInputElement).value;
  const company = (document.getElementById('company') as HTMLInputElement).value;
  const message = (document.getElementById('message') as HTMLTextAreaElement).value;
  
  const whatsappMessage = `*Novo Contato - Site*%0A%0A*Nome:* ${name}%0A*E-mail:* ${email}%0A*Telefone:* ${phone}%0A*Empresa:* ${company}%0A%0A*Mensagem:*%0A${message}`;
  
  window.open(`https://wa.me/5513991836523?text=${whatsappMessage}`, '_blank');
});
</script>

<style>
.contact-container {
  position: relative;
  z-index: 2;
  padding-top: 5rem;
}

.hero-contact {
  max-width: 1400px;
  margin: 0 auto 4rem;
  padding: 0 2rem;
  text-align: center;
}

.hero-title {
  font-size: 4rem;
  font-weight: 900;
  color: #fff;
  margin-bottom: 1.5rem;
}

.highlight {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-subtitle {
  font-size: 1.4rem;
  color: #94a3b8;
}

.contact-content {
  max-width: 1400px;
  margin: 0 auto 4rem;
  padding: 0 2rem;
}

.contact-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
}

.contact-form-section h2 {
  font-size: 2rem;
  color: #fff;
  margin-bottom: 2rem;
}

.contact-form {
  background: rgba(30, 41, 59, 0.5);
  backdrop-filter: blur(10px);
  padding: 2.5rem;
  border-radius: 1rem;
  border: 1px solid rgba(59, 130, 246, 0.2);
}

.form-group {
  margin-bottom: 1.5rem;
}

.form-group label {
  display: block;
  color: #cbd5e1;
  margin-bottom: 0.5rem;
  font-weight: 600;
}

.form-group input,
.form-group textarea {
  width: 100%;
  padding: 1rem;
  background: rgba(15, 23, 42, 0.5);
  border: 1px solid rgba(59, 130, 246, 0.3);
  border-radius: 0.5rem;
  color: #fff;
  font-size: 1rem;
  transition: border-color 0.3s ease;
}

.form-group input:focus,
.form-group textarea:focus {
  outline: none;
  border-color: #3b82f6;
}

.submit-btn {
  width: 100%;
  padding: 1.2rem;
  background: linear-gradient(135deg, #25d366, #20ba5a);
  color: white;
  border: none;
  border-radius: 0.5rem;
  font-size: 1.1rem;
  font-weight: 700;
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 0.8rem;
  transition: transform 0.3s ease;
}

.submit-btn:hover {
  transform: scale(1.05);
}

.contact-image {
  width: 100%;
  height: 300px;
  object-fit: cover;
  border-radius: 1rem;
  margin-bottom: 2rem;
}

.info-cards {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
  margin-bottom: 2rem;
}

.info-card {
  background: rgba(30, 41, 59, 0.5);
  backdrop-filter: blur(10px);
  padding: 1.5rem;
  border-radius: 1rem;
  border: 1px solid rgba(59, 130, 246, 0.2);
}

.info-icon {
  font-size: 2.5rem;
  margin-bottom: 0.8rem;
}

.info-card h3 {
  color: #fff;
  font-size: 1.3rem;
  margin-bottom: 0.5rem;
}

.info-card p {
  color: #cbd5e1;
  margin: 0.3rem 0;
}

.info-card a {
  color: #3b82f6;
  text-decoration: none;
  font-weight: 600;
  display: inline-block;
  margin-top: 0.5rem;
}

.info-card a:hover {
  color: #60a5fa;
}

.response-time {
  background: rgba(34, 197, 94, 0.1);
  border: 1px solid rgba(34, 197, 94, 0.3);
  padding: 1.5rem;
  border-radius: 1rem;
  text-align: center;
}

.response-badge {
  background: linear-gradient(135deg, #22c55e, #16a34a);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 2rem;
  font-weight: 700;
  display: inline-block;
  margin-bottom: 0.8rem;
}

.response-time p {
  color: #cbd5e1;
  font-size: 0.95rem;
}

.final-cta {
  max-width: 800px;
  margin: 4rem auto;
  padding: 3rem 2rem;
  text-align: center;
  background: rgba(30, 41, 59, 0.5);
  backdrop-filter: blur(10px);
  border-radius: 1rem;
  border: 1px solid rgba(59, 130, 246, 0.2);
}

.final-cta h2 {
  font-size: 2.5rem;
  color: #fff;
  margin-bottom: 1rem;
}

.final-cta p {
  color: #94a3b8;
  font-size: 1.2rem;
  margin-bottom: 2rem;
}

.whatsapp-btn-big {
  display: inline-flex;
  align-items: center;
  gap: 1rem;
  padding: 1.2rem 2.5rem;
  background: linear-gradient(135deg, #25d366, #20ba5a);
  color: white;
  text-decoration: none;
  border-radius: 3rem;
  font-size: 1.2rem;
  font-weight: 700;
  transition: transform 0.3s ease;
}

.whatsapp-btn-big:hover {
  transform: scale(1.05);
}

@media (max-width: 1024px) {
  .contact-grid {
    grid-template-columns: 1fr;
    gap: 2rem;
  }
}

@media (max-width: 768px) {
  .hero-title {
    font-size: 2.5rem;
  }
}
</style>
