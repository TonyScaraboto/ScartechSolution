<style>
.services-container {
  position: relative;
  z-index: 2;
  padding-top: 5rem;
}

/* Hero */
.hero-services {
  max-width: 1400px;
  margin: 0 auto 4rem;
  padding: 0 2rem;
  text-align: center;
}

.hero-title {
  font-size: 4rem;
  font-weight: 900;
  color: #fff;
  margin-bottom: 1.5rem;
}

.highlight {
  background: linear-gradient(135deg, #3b82f6, #2563eb);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-subtitle {
  font-size: 1.4rem;
  color: #94a3b8;
}

/* Services Grid */
.services-grid-section {
  max-width: 1400px;
  margin: 0 auto 4rem;
  padding: 0 2rem;
}

.services-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 2rem;
}

.service-card {
  background: rgba(30, 41, 59, 0.5);
  backdrop-filter: blur(10px);
  border-radius: 1rem;
  overflow: hidden;
  border: 1px solid rgba(59, 130, 246, 0.2);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.service-card:hover {
  transform: translateY(-10px);
  box-shadow: 0 20px 60px rgba(37, 99, 235, 0.3);
}

.service-image {
  width: 100%;
  height: 200px;
  object-fit: cover;
}

.service-content {
  padding: 2rem;
}

.service-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.service-content h3 {
  font-size: 1.8rem;
  color: #fff;
  margin-bottom: 1rem;
}

.service-content p {
  color: #cbd5e1;
  line-height: 1.7;
  margin-bottom: 1.5rem;
}

.service-features {
  list-style: none;
  padding: 0;
  margin-bottom: 1.5rem;
}

.service-features li {
  color: #cbd5e1;
  padding: 0.5rem 0;
  font-size: 0.95rem;
}

.service-stats {
  padding-top: 1rem;
  border-top: 1px solid rgba(59, 130, 246, 0.2);
  color: #94a3b8;
}

.service-stats strong {
  color: #3b82f6;
  font-weight: 700;
}

/* Process Section */
.process-section {
  max-width: 1400px;
  margin: 4rem auto;
  padding: 0 2rem;
}

.section-title {
  font-size: 2.5rem;
  font-weight: 900;
  color: #fff;
  margin-bottom: 3rem;
  text-align: center;
}

.process-grid {
  display: grid;
  grid-template-columns: repeat(5, 1fr);
  gap: 1.5rem;
}

.process-step {
  background: rgba(30, 41, 59, 0.5);
  backdrop-filter: blur(10px);
  border-radius: 1rem;
  padding: 1.5rem;
  border: 1px solid rgba(59, 130, 246, 0.2);
  text-align: center;
  position: relative;
}

.step-number {
  position: absolute;
  top: 1rem;
  right: 1rem;
  font-size: 2rem;
  font-weight: 900;
  color: rgba(59, 130, 246, 0.3);
}

.process-img {
  width: 100%;
  height: 120px;
  object-fit: cover;
  border-radius: 0.5rem;
  margin-bottom: 1rem;
}

.process-step h3 {
  font-size: 1.2rem;
  color: #fff;
  margin-bottom: 0.8rem;
}

.process-step p {
  font-size: 0.9rem;
  color: #cbd5e1;
  line-height: 1.6;
}

/* Garantias */
.garantias-section {
  max-width: 1400px;
  margin: 4rem auto;
  padding: 0 2rem;
}

.garantias-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 2rem;
  margin-top: 3rem;
}

.garantia-card {
  background: rgba(30, 41, 59, 0.5);
  backdrop-filter: blur(10px);
  padding: 2rem;
  border-radius: 1rem;
  border: 1px solid rgba(34, 197, 94, 0.2);
  text-align: center;
  transition: transform 0.3s ease;
}

.garantia-card:hover {
  transform: translateY(-5px);
}

.garantia-icon {
  font-size: 3rem;
  margin-bottom: 1rem;
}

.garantia-card h3 {
  font-size: 1.3rem;
  color: #fff;
  margin-bottom: 0.8rem;
}

.garantia-card p {
  color: #cbd5e1;
  line-height: 1.6;
  font-size: 0.95rem;
}

/* Responsive */
@media (max-width: 1024px) {
  .services-grid {
    grid-template-columns: 1fr;
  }

  .process-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .garantias-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 768px) {
  .hero-title {
    font-size: 2.5rem;
  }

  .process-grid,
  .garantias-grid {
    grid-template-columns: 1fr;
  }
}
</style>
