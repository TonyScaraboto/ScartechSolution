<nav data-nav-root>
<div class="menu-header">
<a href="/" class="site-title">
<img src="/logo2.png" alt="Logo" class="logo-image" />
<span class="logo-text">Scartech <span class="logo-highlight">Solution</span></span>
</a>
<button class="menu-toggle" type="button" aria-label="Abrir menu" aria-expanded="false">
<span class="menu-bar"></span>
<span class="menu-bar"></span>
<span class="menu-bar"></span>
</button>
<div class="menu-links">
<a href="/">Início</a>
<a href="/about">Sobre</a>
<a href="/services">Serviços</a>
<a href="/work">Portfólio</a>
<a href="/contact">Contato</a>
</div>
</div>
</nav>

<style>
nav {
z-index: 9999;
position: fixed;
top: 0;
left: 0;
right: 0;
background: rgba(0, 0, 0, 0.85);
backdrop-filter: blur(20px);
border-bottom: 1px solid rgba(59, 130, 246, 0.2);
box-shadow: 0 4px 20px rgba(0, 0, 0, 0.5);
}

.menu-header {
display: flex;
justify-content: space-between;
align-items: center;
padding: 1rem 2rem;
max-width: 1400px;
margin: 0 auto;
}

.site-title {
  display: flex;
  align-items: center;
  gap: 1rem;
  text-decoration: none;
  transition: all 0.3s ease;
}

.logo-image {
  height: 2.5rem;
  width: auto;
  object-fit: contain;
  filter: drop-shadow(0 0 10px rgba(59, 130, 246, 0.4));
  transition: filter 0.3s ease;
}

.logo-text {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  font-size: 1.8rem;
  font-weight: 800;
  letter-spacing: -0.8px;
  color: #ffffff;
  text-shadow: 0 0 20px rgba(59, 130, 246, 0.4);
  transition: all 0.3s ease;
}

.logo-highlight {
  background: linear-gradient(135deg, #3b82f6, #2563eb, #1d4ed8);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 800;
}
.menu-links {
  display: flex;
  gap: 2rem;
  align-items: center;
}

.menu-toggle {
  display: none;
  align-items: center;
  justify-content: center;
  gap: 0.4rem;
  background: rgba(30, 41, 59, 0.7);
  border: 1px solid rgba(59, 130, 246, 0.35);
  border-radius: 0.75rem;
  padding: 0.6rem;
  cursor: pointer;
  transition: all 0.3s ease;
}

.menu-toggle .menu-bar {
  display: block;
  width: 1.6rem;
  height: 0.14rem;
  background: #e2e8f0;
  border-radius: 999px;
  transition: transform 0.3s ease, opacity 0.3s ease;
}

nav.menu-open .menu-toggle .menu-bar:nth-child(1) {
  transform: translateY(0.28rem) rotate(45deg);
}

nav.menu-open .menu-toggle .menu-bar:nth-child(2) {
  opacity: 0;
}

nav.menu-open .menu-toggle .menu-bar:nth-child(3) {
  transform: translateY(-0.28rem) rotate(-45deg);
}

.menu-links a {
  text-decoration: none;
  color: #93c5fd;
  font-weight: 600;
  font-size: 1rem;
  padding: 0.5rem 1rem;
  border-radius: 0.5rem;
  transition: all 0.3s ease;
  position: relative;
}

.menu-links a::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 2px;
  background: linear-gradient(90deg, #3b82f6, #2563eb);
  transition: width 0.3s ease;
}

@media (hover: hover) {
  .site-title:hover {
    transform: translateY(-2px);
  }

  .site-title:hover .logo-image {
    filter: drop-shadow(0 0 20px rgba(59, 130, 246, 0.6));
  }

  .site-title:hover .logo-text {
    text-shadow: 0 0 30px rgba(59, 130, 246, 0.6), 0 0 15px rgba(147, 197, 253, 0.4);
  }

  .menu-links a:hover {
    color: #ffffff;
    text-shadow: 0 0 10px rgba(147, 197, 253, 0.6);
  }

  .menu-links a:hover::after {
    width: 80%;
  }
}

@media (max-width: 768px) {
  nav {
    padding-bottom: 0.5rem;
  }

  .menu-header {
    flex-direction: row;
    gap: 0.5rem;
    padding: 0.8rem 1rem;
    width: 100%;
  }

  .menu-toggle {
    display: inline-flex;
  }

  .menu-links {
    display: none;
    flex-direction: column;
    width: 100%;
    margin-top: 0.75rem;
    background: rgba(15, 23, 42, 0.92);
    border: 1px solid rgba(59, 130, 246, 0.25);
    border-radius: 1rem;
    padding: 0.75rem 0.5rem;
    box-shadow: 0 12px 32px rgba(15, 23, 42, 0.4);
  }

  nav.menu-open .menu-links {
    display: flex;
  }

  .menu-links a {
    font-size: 0.95rem;
    padding: 0.6rem 0.75rem;
    border-radius: 0.75rem;
    width: 100%;
    text-align: center;
  }

  .menu-links a::after {
    display: none;
  }

  .logo-text {
    font-size: 1.4rem;
  }
}
</style>

<script is:inline>
const initializeNav = () => {
  const nav = document.querySelector('[data-nav-root]');
  if (!nav || nav.dataset.navInitialized === 'true') return;

  const toggle = nav.querySelector('.menu-toggle');
  const links = nav.querySelector('.menu-links');
  if (!toggle || !links) return;

  const closeMenu = () => {
    nav.classList.remove('menu-open');
    toggle.setAttribute('aria-expanded', 'false');
  };

  toggle.addEventListener('click', () => {
    const isOpen = nav.classList.toggle('menu-open');
    toggle.setAttribute('aria-expanded', String(isOpen));
  });

  links.querySelectorAll('a').forEach((anchor) => {
    anchor.addEventListener('click', () => {
      if (window.matchMedia('(max-width: 768px)').matches) {
        closeMenu();
      }
    });
  });

  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape') {
      closeMenu();
    }
  });

  nav.dataset.navInitialized = 'true';
};

document.addEventListener('DOMContentLoaded', initializeNav);
document.addEventListener('astro:page-load', initializeNav);
</script>
