    </div>
  </div>
</nav>

<script>
  if (typeof window !== 'undefined') {
    let navToggleController;
    let currentNav;

    const setupMenuToggle = () => {
      const nav = document.querySelector('nav');
      const toggle = nav?.querySelector('.menu-toggle');
      const links = nav?.querySelector('.menu-links');

      if (!nav || !toggle || !links) {
        return;
      }

      navToggleController?.abort();
      navToggleController = new AbortController();
      const { signal } = navToggleController;
      currentNav = nav;

      const setMenuState = (open) => {
        links.classList.toggle('is-open', open);
        nav.classList.toggle('menu-open', open);
        toggle.setAttribute('aria-expanded', String(open));
        toggle.classList.toggle('is-active', open);
      };

      const toggleMenu = () => {
        const isOpen = links.classList.contains('is-open');
        setMenuState(!isOpen);
      };

      let touchHandled = false;
      let touchResetTimer = 0;

      const handleTouchStart = (event) => {
        if (event.cancelable) {
          event.preventDefault();
        }
        touchHandled = true;
        window.clearTimeout(touchResetTimer);
        toggleMenu();
        touchResetTimer = window.setTimeout(() => {
          touchHandled = false;
        }, 400);
      };

      if ('ontouchstart' in window || navigator.maxTouchPoints > 0) {
        toggle.addEventListener('touchstart', handleTouchStart, { passive: false, signal });
      }

      toggle.addEventListener(
        'click',
        (event) => {
          if (event.detail === 0 && event.screenX === 0 && event.screenY === 0) {
            toggleMenu();
            return;
          }

          if (touchHandled) {
            return;
          }

          toggleMenu();
        },
        { signal }
      );

      toggle.addEventListener(
        'keydown',
        (event) => {
          if (event.key === 'Enter' || event.key === ' ') {
            event.preventDefault();
            toggleMenu();
          }
        },
        { signal }
      );

      document.addEventListener(
        'keydown',
        (event) => {
          if (event.key === 'Escape' && nav.classList.contains('menu-open')) {
            setMenuState(false);
          }
        },
        { signal }
      );

      links.querySelectorAll('a').forEach((link) => {
        link.addEventListener(
          'click',
          () => {
            if (window.innerWidth <= 768) {
              setMenuState(false);
            }
          },
          { signal }
        );
      });

      window.addEventListener(
        'resize',
        () => {
          if (window.innerWidth > 768) {
            setMenuState(false);
          }
        },
        { signal }
      );

      const afterSwapHandler = () => {
        setMenuState(false);
        requestAnimationFrame(() => {
          requestAnimationFrame(setupMenuToggle);
        });
      };

      document.addEventListener('astro:after-swap', afterSwapHandler, { signal });

      window.addEventListener(
        'pageshow',
        (event) => {
          if (event.persisted) {
            setMenuState(false);
            requestAnimationFrame(() => {
              requestAnimationFrame(setupMenuToggle);
            });
          }
        },
        { signal }
      );

      setMenuState(false);
    };

    const scheduleSetup = () => {
      requestAnimationFrame(() => {
        requestAnimationFrame(setupMenuToggle);
      });
    };

    if (document.readyState !== 'loading') {
      scheduleSetup();
    } else {
      document.addEventListener('DOMContentLoaded', scheduleSetup, { once: true });
    }

    document.addEventListener('astro:page-load', scheduleSetup);
    document.addEventListener('astro:after-swap', scheduleSetup);
  }
</script>

